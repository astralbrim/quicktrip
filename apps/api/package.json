{
  "name": "@quicktrip/api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "build": "esbuild src/index.ts --bundle --format=esm --outfile=dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "db:generate": "prisma generate",
    "db:migrate": "wrangler d1 migrations apply quicktrip-dev --local",
    "db:migrate:prod": "wrangler d1 migrations apply quicktrip-prod",
    "db:reset": "wrangler d1 execute quicktrip-dev --local --command='DROP TABLE IF EXISTS User; DROP TABLE IF EXISTS SearchHistory; DROP TABLE IF EXISTS Favorite;'"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.0",
    "@prisma/adapter-d1": "^5.18.0",
    "@prisma/client": "^5.18.0",
    "bcryptjs": "^2.4.3",
    "hono": "^4.3.11",
    "jose": "^5.2.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240603.0",
    "@types/bcryptjs": "^2.4.6",
    "esbuild": "^0.21.4",
    "prisma": "^5.18.0",
    "typescript": "^5.2.2",
    "wrangler": "^3.57.2"
  }
}